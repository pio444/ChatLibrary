<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/regiser_Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Name"
                android:singleLine="true"
                android:maxLength="32"/>

            <EditText
                android:id="@+id/regiser_Password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:hint="@string/regiser_Password"
                android:maxLength="50"/>

            <EditText
                android:id="@+id/regiser_Confirm_Password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:hint="@string/regiser_Confirm_Password"
                android:maxLength="50"/>

            <EditText
                android:id="@+id/regiser_e_mail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_e_mail"
                android:singleLine="true"
                android:maxLength="40"/>

            <EditText
                android:id="@+id/regiser_FirstName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_First_Name"
                android:singleLine="true"
                android:maxLength="30"/>

            <EditText
                android:id="@+id/regiser_LastName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Last_Name"
                android:singleLine="true"
                android:maxLength="30"/>

            <TextView
                android:id="@+id/regiser_Sex"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Sex"
                android:singleLine="true"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/register_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex_female"/>

                <RadioButton
                    android:id="@+id/register_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex_male"/>

            </RadioGroup>

            <EditText
                android:id="@+id/regiser_Pesel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Pesel"
                android:inputType="number"
                android:singleLine="true"
                android:maxLength="11"/>

            <EditText
                android:id="@+id/regiser_City"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_City"
                android:singleLine="true"
                android:maxLength="60"/>

            <EditText
                android:id="@+id/regiser_Postal_Code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Postal_Code"
                android:digits="0123456789-"
                android:singleLine="true"
                android:maxLength="6"/>

            <EditText
                android:id="@+id/regiser_Street"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Street"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/regiser_Postal_City"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Postal_City"
                android:singleLine="true"
                android:maxLength="60"/>

            <EditText
                android:id="@+id/regiser_Home_Number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Home_Number"
                android:singleLine="true"
                android:maxLength="8"
                android:inputType="number"/>

            <TextView
                android:id="@+id/regiser_Type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/regiser_Type"
                android:singleLine="true"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/register_correspondance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex_correspondance"/>

                <RadioButton
                    android:id="@+id/register_living"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sex_living"/>

            </RadioGroup>

            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/register"
                android:onClick="regiser"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>